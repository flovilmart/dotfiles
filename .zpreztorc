# Set the Prezto modules to load (browse modules).
# The order matters.

configure_starship() {
  zstyle ':prezto:load' pmodule \
    'directory' \
    'utility' \
    'completion' \
    'prompt' \
    'fasd' \
    'syntax-highlighting' \
    'history-substring-search' \
    'history' \
    'autosuggestions'
  zstyle ':prezto:module:prompt' theme 'starship'
}

configure_zimple() {
  zstyle ':prezto:load' pmodule \
    'directory' \
    'utility' \
    'completion' \
    'k8s' \
    'git' \
    'prompt' \
    'fasd' \
    'syntax-highlighting' \
    'history-substring-search' \
    'history' \
    'autosuggestions' \
    'rails' \
    'ruby'

  zstyle ':prezto:module:prompt' theme 'zimple'
}

# prompt options
export USE_ZIMPLE=1

if [ "$USE_ZIMPLE" = "1" ]; then
  configure_zimple
else
  configure_starship
fi

zstyle ':prezto:module:autosuggestions' color 'yes'
zstyle ':prezto:module:autosuggestions:color' found 'bg=none,fg=yellow'

# history substring
zstyle ':prezto:module:history-substring-search' color 'yes'
zstyle ':prezto:module:history-substring-search:color' found 'bg=none,fg=yellow'

bindkey '^[[A' history-substring-search-up
bindkey '^[[B' history-substring-search-down
bindkey -M vicmd 'k' history-substring-search-up
bindkey -M vicmd 'j' history-substring-search-down
